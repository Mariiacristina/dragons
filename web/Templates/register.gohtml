<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<title>Register</title>
	<script src = "https://code.jquery.com/jquery-1.10.2.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"> </script>
	<style>
		.bob{
			background-color: #ffe6e6;
			text-align:center;
			padding: 100px;
			}

		.con{
			background-color: #E6E6E6;
			height:50px;
			padding: 40px 40px;
			border: double;
			font-size: 20px;
			}
		.asd{
			background-color: #fff2e6;
			height:20px;
			padding: 10px 10px;
			border: solid;
			font-size: 16px;
			width: 50%;
			}
		.tx{
			font-size: 30px;
			font-color:black;
			font-style: italic;
			}
		.reg{
			background-color: #ff6666;
			height:30%;
			padding: 10px 10px;
			font-size: 32px;
			border: ridge;
			width: 250px;
			font-style: italic;
			color:white;
			}	
		.bk{
			background-color: #ff9999;
			height:30%;
			padding: 10px 10px;
			font-size: 32px;
			border: ridge;
			width: 250px;
			font-style: italic;
			color: #9933ff;
			}
		.vid{
			height:30%;
			width: 5500px;
		}



	</style>
</head>
<body class="bob">

	<h1 class="tx">Crea Tu Usuario</h1>
	<h2>Ingresa tu Nombre y Contraseña</h2>

		<input type="text" name="NOMBRE" id="NOMBRE" placeholder="NOMBRE" class="asd">

		<br><br>

		<input type="text" name="PASSWORD" id="PASSWORD" placeholder="CONSTRASEÑA" class="asd">

		<br><br>

		<input type="text" name="REPEAT-PASSWORD" id="RPASSWORD" placeholder="CONSTRASEÑA" class="asd">

		<br><br>

		<button type="submit" id="boton" class="reg">
			Registrarte
		</button>

		<button onclick="window.location.href='http://localhost:8080/'" class="bk">Regresar</button>

</body>
<script>
$('#boton')
.click(function(e){
nombre = document.getElementById('NOMBRE').value;
password = document.getElementById('PASSWORD').value;
password2 = document.getElementById('RPASSWORD').value;
if(password == password2 && nombre != "" && password !=""){
var info = '{"nombre": "'+nombre+'", "password": "'+password+'"}';
console.log("REGISTER")
console.log(info)
$.ajax({
	data: info,
	url: 'http://localhost:8000/Register',
	contentType:"application/json; charset: utf-8",
	crossDomain: true,
	withCredentials:false,
	type: 'POST',
	beforeSend: function(){
			window.alert("Procesando, espere porfavor...");
	},
	success: function (){
		window.location.replace('/mainmenu')
 },
	error: function(){
		alert("Hubo algun tipo de error.");
	}
	});
} else {
	window.alert("las contraseñas no son iguales, o el formulario está incompleto")
}


});

</script>
</html>
