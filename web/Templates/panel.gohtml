<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<title>PANEL PRINCIPAL</title>
	<script src = "https://code.jquery.com/jquery-1.10.2.js"></script>
	<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
</script>
</head>
<body>

	<h1>PANEL PRINCIPAL</h1>
	<h2>Sensores</h2>
	<br>
	<p>
		Temperatura zona calor: <output id="temp_sol"></output>
		<br>
		Temperatura Terrario: <output id="temp_terrario"></output>
		<br>
		Humedad Terrario: <output id="temp_humedad"></output>
	</p>
	<h2>Accesorios</h2>
	<br>
	<p>
		Foco UV:  <output id="foco_uv"></output>
		<br>
		Foco Termico:  <output id="foco_termico"></output>
		<br>
		Placa Termica:  <output id="placa_termica"></output>
	</p>

	<br>
	<button onclick="window.location.href='http://localhost:8080/perfil'">Configuraci√≥n Perfil</button>
	<br>
	<br>
	<button onclick="window.location.href='http://localhost:8080/'">Salir</button>

</body>
<script>

$(document).ready(function () {
//GET TEMPERATURA SOL
$.ajax({
	url: 'http://localhost:8000/pp/temp',
	contentType:"application/json; charset: utf-8",
	crossDomain: true,
	withCredentials:false,
	type: 'GET',
	success: function (res){
		console.log("SENSOR - TEMPERATURA SOL")
		console.log(res);
		document.getElementById('temp_sol').value = res.valor
	},
	error: function(){
		alert("Hubo algun tipo de error.");
	}
	});

